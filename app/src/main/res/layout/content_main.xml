<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main"
    tools:context="com.arkaprava.myappportfolio.MainActivity">

    <TextView
        android:text="@string/app_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/app_text_color"
        android:textSize="@dimen/app_text_size"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:id="@+id/linear_layout"
        android:orientation="vertical"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/textView">

        <Button
            style="@style/ButtonTheme"
            android:text="@string/app1"
            android:id="@+id/app1"
            android:onClick="openApp" />

        <Button
            style="@style/ButtonTheme"
            android:text="@string/app2"
            android:id="@+id/app2"
            android:onClick="openApp" />

        <Button
            style="@style/ButtonTheme"
            android:text="@string/app3"
            android:id="@+id/app3"
            android:onClick="openApp" />

        <Button
            style="@style/ButtonTheme"
            android:text="@string/app4"
            android:id="@+id/app4"
            android:onClick="openApp" />

        <Button
            style="@style/CapstoneTheme"
            android:text="@string/app5"
            android:id="@+id/app5"
            android:onClick="openApp" />
    </LinearLayout>
</RelativeLayout>
